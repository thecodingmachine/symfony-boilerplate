{
    "name": "thecodingmachine/symfony-boilerplate",
    "type": "project",
    "description": "A Symfony GraphQL API",
    "license": "MIT",
    "authors": [
        {
            "name": "TheCodingMachine"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "ecodev/graphql-upload": "^6.1",
        "league/flysystem-aws-s3-v3": "^2.1",
        "league/flysystem-bundle": "^2.1",
        "league/flysystem-memory": "^2.0",
        "myclabs/php-enum": "^1.8",
        "nelmio/cors-bundle": "^2.0",
        "phpoffice/phpspreadsheet": "^1.14",
        "sensio/framework-extra-bundle": "^5.6",
        "symfony/apache-pack": "^1.0",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "*",
        "symfony/http-client": "5.4.*",
        "symfony/mailer": "5.4.*",
        "symfony/messenger": "5.4.*",
        "symfony/monolog-bundle": "^3.7",
        "symfony/process": "5.4.*",
        "symfony/redis-messenger": "5.4.*",
        "symfony/security-bundle": "5.4.*",
        "symfony/translation": "5.4.*",
        "symfony/twig-bundle": "5.4.*",
        "symfony/yaml": "5.4.*",
        "thecodingmachine/graphqlite-bundle": "^5.0",
        "thecodingmachine/safe": "^1.1",
        "thecodingmachine/tdbm-bundle": "^5.3",
        "thecodingmachine/tdbm-graphql-bundle": "^5.0",
        "twig/cssinliner-extra": "^3.3",
        "twig/extra-bundle": "^3.3",
        "twig/inky-extra": "^3.3"
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "require-all": true,
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "ergebnis/composer-normalize": "^2.8",
        "fakerphp/faker": "^1.12",
        "pepakriz/phpstan-exception-rules": "^0.12",
        "pestphp/pest": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.0",
        "qossmic/deptrac-shim": "^0.11.1",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/debug-bundle": "^5.4",
        "symfony/phpunit-bridge": "^6.0",
        "symfony/stopwatch": "^5.4",
        "symfony/web-profiler-bundle": "^5.4",
        "thecodingmachine/phpstan-safe-rule": "^1.1",
        "thecodingmachine/phpstan-strict-rules": "^1.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "symfony/flex": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "cscheck": "phpcs",
        "csfix": "phpcbf",
        "deptrac": "deptrac",
        "pest": "XDEBUG_MODE=coverage pest --coverage",
        "phpstan": "phpstan analyse src/ -c phpstan.neon --level=max --no-progress -vvv --memory-limit=1024M",
        "yaml-lint": "yaml-lint config translations"
    }
}
